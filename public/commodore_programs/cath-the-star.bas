10 PRINT CHR$(147)
20 PRINT "CATCH THE STAR (Z=LEFT, C=RIGHT)"
30 POKE53281,0:POKE53280,3
40 P=20:PRINT SPC(P);"U"   :REM U = your catcher
50 FX=INT(RND(1)*40)+1
60 FOR Y=1 TO 20
70   PRINT CHR$(147)
80   FOR L=1 TO Y-1:PRINT: NEXT
90   FOR L=1 TO FX-1:PRINT " ";:NEXT:PRINT "*"
100  PRINT SPC(P);"U"
110  GET A$:IF A$="Z" AND P>1 THEN P=P-1
120  IF A$="C" AND P<40 THEN P=P+1
130 NEXT
140 IF FX=P THEN PRINT "YOU CAUGHT IT!":ELSE PRINT "MISSED!"
150 END
